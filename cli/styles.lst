document {
  size: {
    width: 210mm;
    height: 297mm;
  }
  margin: {
    top: 2cm;
    bottom: 2cm;
    left: 2cm;
    right: 2cm;
  }
}

b {
  font: {
    variation-settings: "wght" 500;
  }
}

heading {
  font: {
    variation-settings: "wght" 800, "HEXP" 40;
    size: 50pt;
  }
  margin: {
    bottom: 5mm;
  }
}

heading.title {
  margin: {
    left: -4mm;
  }
}

heading.subtitle {
  font: {
    variation-settings: "wght" 600, "HEXP" 20;
    size: 18pt;
  }
  margin: {
    bottom: 1cm;
  }
}

image {
  size: {
    width: 3cm;
  }
  padding: {
    top: 1cm;
    left: 1cm;
    bottom: 1cm;
  }
}

paragraph {
  font: {
    variation-settings: "wght" 250, "HEXP" 0;
    size: 11pt;
  }
  margin: {
    bottom: 2mm;
  }
  line-height: 1.5;
}

paragraph.special {
  font: {
    variation-settings: "wght" 500, "HEXP" 0;
    size: 9pt;
  }
  margin: {
    left: 4mm;
    right: 3cm;
  }
}
